import turtle
def branch(t, b_length,l_angle,r_angle,depth,redusing_factor):
    if depth > 0:
        t.forward(b_length)
        t.pencolor("brown")
        t.left(l_angle)
        t.pencolor("green")
        branch(t,b_length * redusing_factor, l_angle, r_angle, depth-1, redusing_factor)
        t.right(l_angle + r_angle)
        branch(t,b_length * redusing_factor, l_angle, r_angle, depth-1, redusing_factor)
        t.left(r_angle)
        t.backward(b_length)
def main():
    l_angle = int(input("enter left branch angle: "))
    r_angle = int(input("enter the right branch angle: "))
    b_length = int(input("enter starting branch length: "))
    depth = float(input("enter recursion depth: "))
    redusing_factor = float(input("enter redusing factor: "))
    t = turtle.Turtle()
    screen = turtle.Screen()
    screen.bgcolor("white")
    t.speed("fast")
    t.left(90)
    t.up()
    t.backward(100)
    t.down()
    branch(t, b_length, l_angle, r_angle, depth, redusing_factor)
    t.color("brown")
    t.forward(100)
    t.hideturtle()
    turtle.done()
if __name__ == "__main__":
    main()